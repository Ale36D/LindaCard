/* pages/setup/setup.wxss */
page{
  background-image: url("https://gitee.com/uncleicecream/bk-img/raw/master/HomePage.webp");
  background-size: cover;
}
.body_card{
  /* 居中对齐元素 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #2f3542;
  margin: 10px;
  border-radius: 5px;
  height: auto;
  color: #fff;
  box-shadow: 5px;
  padding: 3vw;
}
.image{
  margin-top: 5vw;
  margin-bottom: 5vw;
  overflow: hidden;
  width: 25vw;
  height: 25vw;
  border-radius: 10px;
}
.text_view{
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  color: #fff;
  font-weight: 900;
  text-shadow:  0px 0px 15px rgb(224, 224, 224), 0px 0px 15px #fff,0px 0px 10px #fff,-5px 5px 10px #fff;
}
.payCodeView{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh; 
  width: 100vw;
  position: absolute;
  z-index:10; 
  background-color: #fff;
}
.amplify_image{
  overflow: hidden;
  width: 90vw;
  height: 62vh;
  border-radius: 10px;
}